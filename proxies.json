{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "Posts": {
            "matchCondition": {
                "route": "post/{*path}",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/posts/{path}"
        },
        "media": {
            "matchCondition": {
                "route": "public/{*path}",
                "methods": [
                    "GET",
                    "HEAD"
                ]
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/media/{path}"
        },
        "content": {
            "matchCondition": {
                "route": "content/{*path}"
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/content/{path}"
        },
        "Index": {
            "matchCondition": {
                "route": "/"
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/index.html"
        },
        "category": {
            "matchCondition": {
                "route": "/category/{*path}",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS"
                ]
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/category/{path}"
        },
        "category-fsharp": {
            "matchCondition": {
                "route": "/category/F"
            },
            "responseOverrides": {
                "response.statusCode": "301",
                "response.statusReason": "Redirect",
                "response.headers.Location": "/category/FSharp"
            }
        },
        "feed": {
            "matchCondition": {
                "route": "/feed/atom",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS"
                ]
            },
            "backendUri": "https://%Blog.Storage%.blob.core.windows.net/%Blog.Container%/feed/atom"
        },
        "letsencryptproxy": {
            "matchCondition": {
                "route": "/.well-known/acme-challenge/{*rest}"
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/api/letsencrypt/{rest}"
        },
        "archive": {
            "matchCondition": {
                "route": "/archive",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS"
                ]
            },
            "responseOverrides": {
                "response.statusCode": "301",
                "response.statusReason": "Redirect",
                "response.headers.Location": "/category/all"
            }
        },
        "page": {
            "matchCondition": {
                "route": "/page/{*path}",
                "methods": [
                    "GET",
                    "HEAD",
                    "OPTIONS"
                ]
            },
            "responseOverrides": {
                "response.statusCode": "301",
                "response.statusReason": "Redirect",
                "response.headers.Location": "/category/all"
            }
        },
        "tag": {
            "matchCondition": {
                "route": "/tag/{*path}"
            },
            "responseOverrides": {
                "response.statusCode": "301",
                "response.statusReason": "Redirect",
                "response.headers.Location": "/category/all"
            }
        },
        "functional-core": {
            "matchCondition": {
                "route": "post/2018/01/20/functional-core"
            },
            "responseOverrides": {
                "response.statusCode": "301",
                "response.statusReason": "Redirect",
                "response.headers.Location": "post/2018/01/25/functional-core"
            }
        }
    }
}